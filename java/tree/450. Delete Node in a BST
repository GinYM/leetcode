/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public TreeNode deleteNode(TreeNode root, int key) {
        if(root == null){
            return null;
        }
        if(root.val == key){
            //replace with max in left or min in right
            if(root.left == null){
                return root.right;
            }
            
            int valLessThan = findMax(root.left);
            root.val = valLessThan;
            root.left = deleteNode(root.left, valLessThan);
        }else if (key > root.val){
            root.right = deleteNode(root.right, key);
        }else{
            root.left = deleteNode(root.left, key);
        }
        return root;
    }
    
    public int findMax(TreeNode node){
        while(node.right!=null){
            node = node.right;
        }
        return node.val;
    }
}
